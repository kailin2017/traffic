<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="com.kailin.traffic.data.bus.route.BusRouteData" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_my_search_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_my_search_padding">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/routeTitle"
                style="@style/Kailin.TextView.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{data.routeName.zh_tw}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/routeText"
                style="@style/Kailin.TextView.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/search_route_from_to(data.destinationStopNameZh,data.departureStopNameZh)}"
                app:layout_constraintLeft_toLeftOf="@id/routeTitle"
                app:layout_constraintTop_toBottomOf="@id/routeTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
